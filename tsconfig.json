{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "outDir": "./build",
    "paths": {
      "lib/*": ["lib/*"],
      "server/*": ["server/*"],
      "src/*": ["client/src/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "include": [
    "./client/**/*",
    "./lib/**/*",
    "./server/**/*"
  ]
}
