<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script src="/js/picker.js"></script>
<script src="/js/create.js"></script>

<link rel="stylesheet" href="/picker.css">

<div class="create-promise blue-border">
  <h1 class="promise-statement">
    <span>{{promise.user}}</span> {{verbifyDomain domain=promise.domain}}
    <span>{{promise.what}}</span>
    <span/>
  </h1>
  
  <div class="promise-picker">
    <h1>by:</h1>
    <fieldset>
      <input id="input_date_text" type="text" data-value="{{promise.tdue}}" class="text-input">
      <input id="input_date" type="text" class="time-input">
    </fieldset>
    
    <fieldset>
      <input id="input_time_text" type="text" data-value="{{promise.tdue}}" class="text-input">
      <input id="input_time" type="text" class="time-input">
    </fieldset>
  </div>
  
  {{#if showSubmitButton}}
    <a class="promise-button" href="/promises/create/{{promise.urtext}}">Commit</a>
  {{/if}}
</div>