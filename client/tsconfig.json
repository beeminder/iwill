{
  "compilerOptions": {
    "baseUrl": "../",
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./build/",
    "paths": {
      "src/*": ["client/src/*"],
      "lib/*": ["lib/*"]
    }
  },
  "include": [
    "../lib/**/*"
  ]
}
